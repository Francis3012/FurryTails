<% include ../partials/header %>
<link  rel="stylesheet" type="text/css" href="/stylesheets/form.css">

    <div class="row">
        <div style="width: 50%; margin: 0 auto;">
            <div class="alert alert-info" role="alert">
                <h1 style="text-align: center">Edit <%= pet.name %></h1>
                <form action="/pets/<%=pet._id%>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="name" value="<%= pet.name %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="image" value="<%= pet.image %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="description" value="<%= pet.description %>">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Update!</button>
                    </div>
                </form>
                <a href="/pets">Go Back</a>
            </div>
        </div>
    </div>
<% include ../partials/footer %>

