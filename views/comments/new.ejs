<% include ../partials/header %>
<link  rel="stylesheet" type="text/css" href="/stylesheets/form.css">

    <div class="row">
        <div style="width: 70%; margin: 0 auto;">
            <div class="alert alert-primary" role="alert">
                <h1 style="text-align: center">Add New Comment to <%= pet.name %></h1>
                <form action="/pets/<%= pet._id %>/comments" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="comment[text]" placeholder="Comment">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                    </div>
                </form>
                <a class="btn btn-outline-danger" href="/pets"><i class="fas fa-chevron-left"></i> Back</a>
            </div>
        </div>
    </div>
<% include ../partials/footer %>

